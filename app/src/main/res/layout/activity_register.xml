<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR CUENTA"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/neon_cyan"
            android:shadowColor="@color/neon_cyan"
            android:shadowRadius="12"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"/>

        <!-- Error -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textColor="@color/accent_red"
            android:padding="12dp"
            android:background="@drawable/emergency_neon_background"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="16dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="16dp"/>

        <!-- Teléfono -->
        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono (opcional)"
            android:inputType="phone"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="16dp"/>

        <!-- Teléfono Emergencia -->
        <EditText
            android:id="@+id/etTelefonoEmergencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono emergencia (opcional)"
            android:inputType="phone"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="16dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña (mín. 6 caracteres)"
            android:inputType="textPassword"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="16dp"/>

        <!-- Confirmar Contraseña -->
        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="24dp"/>

        <!-- Botón Registrar -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR CUENTA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_neon_background"
            android:textColor="@color/button_text"
            android:padding="16dp"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"/>

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/neon_cyan"
            android:visibility="gone"
            android:layout_marginBottom="24dp"/>

        <!-- Volver -->
        <TextView
            android:id="@+id/tvBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ya tengo cuenta"
            android:textColor="@color/neon_cyan"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</ScrollView>