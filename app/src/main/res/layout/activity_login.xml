<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_medication"
            android:tint="@color/neon_cyan"
            android:layout_marginBottom="24dp"/>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDI CARE"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/neon_cyan"
            android:shadowColor="@color/neon_cyan"
            android:shadowRadius="15"
            android:letterSpacing="0.15"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu asistente médico inteligente"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="48dp"/>

        <!-- Mensaje de error -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error message"
            android:textColor="@color/accent_red"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/emergency_neon_background"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="16dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/text_area_neon_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="8dp"/>

        <!-- Olvidé contraseña -->
        <TextView
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="@color/neon_cyan"
            android:textSize="14sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="24dp"/>

        <!-- Botón Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INICIAR SESIÓN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_neon_background"
            android:textColor="@color/button_text"
            android:padding="16dp"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="@color/neon_cyan"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_hint"
            android:layout_marginVertical="24dp"/>

        <!-- Registro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta?"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREAR CUENTA"
            android:textColor="@color/neon_cyan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:shadowColor="@color/neon_cyan"
            android:shadowRadius="8"/>

    </LinearLayout>

</ScrollView>